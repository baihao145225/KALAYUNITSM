@{
    Layout = "~/Views/Shared/_Form.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Scripts/select2/css/select2.css" media="all" />
<div class="content">
    <form id="form" class="layui-form">
        @Html.AntiForgeryToken()
        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">SLA名称</label>
                <div class="layui-input-inline">
                    <input type="hidden" name="Id" />
                    <input type="text" name="Name" lay-verify="required" placeholder="请输入SLA名称" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-inline">
                <label class="layui-form-label">合同</label>
                <div class="layui-input-inline">
                    <select lay-ignore name="ContractId" id="ContractId" lay-verify="required" class="select2"></select>
                </div>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">SLTs</label>
                <div class="layui-input-inline">
                    <select lay-ignore name="SLTsId" class="select2 width500" id="SLTsId" multiple="multiple"></select>
                </div>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">说明</label>
            <div class="layui-input-block" style="width: 800px;">
                <textarea name="Description" placeholder="请输入内容" class="layui-textarea"></textarea>
            </div>
        </div>
        <div class="layui-form-item" style="display: none">
            <div class="layui-input-block">
                <button id="btnSubmit" class="layui-btn" lay-submit lay-filter="add">提交</button>
            </div>
        </div>
    </form>
</div>
@section scripts {
<script type="text/javascript" src="~/Scripts/select2/js/select2.min.js"></script>
    <script>
        var form = layui.form, layedit = layui.layedit;
        var layer = layui.layer;

        $("#SLTsId").bindSelect({
            url: "/Configure/SLTs/GetListTreeSelect"
        });
        $("#ContractId").bindSelect({
            url: "/Business/Contract/GetListTreeSelect"
        });

        var primaryKey = $.getQueryString("primaryKey");
        if (primaryKey) {
            $.ajax({
                url: "/Configure/SLA/GetForm",
                data: { primaryKey: primaryKey },
                type: "post",
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form").formSerialize(data);
                }
            });
        }

        form.render();

        form.on('submit(add)', function (data) {
            data.field.sltIds = $("#SLTsId").val().join();
            $.formSubmit({
                url: "/Configure/SLA/SaveForm",
                data: data.field
            });
            return false;
        });

    </script>
}
