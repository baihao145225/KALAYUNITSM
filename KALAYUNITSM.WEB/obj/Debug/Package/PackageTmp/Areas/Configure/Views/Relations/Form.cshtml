@{
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="content">
    <form id="form" class="layui-form">
        @Html.AntiForgeryToken()
        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">关系名称</label>
                <div class="layui-input-inline">
                    <input type="hidden" name="Id" />
                    <input type="text" name="Name" lay-verify="required" placeholder="请输入关系名称" autocomplete="off" class="layui-input">
                </div>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">正向关系</label>
                <div class="layui-input-inline">
                    <input type="text" name="ForwardText" placeholder="请输入正向关系" lay-verify="required" autocomplete="off" class="layui-input">请用#代表被关系的对象，例如：使用# 示例：(配置A)包含(配置B)
                </div>
            </div>
            <div class="layui-inline">
                <label class="layui-form-label">反向关系</label>
                <div class="layui-input-inline">
                    <input type="text" name="ReverseText" placeholder="请输入反向关系" autocomplete="off" class="layui-input">请用#代表主关系对象，例如：被#使用 示例：(配置B)是组成(配置A)的一部分
                </div>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">说明</label>
            <div class="layui-input-block" style="width: 800px;">
                <textarea name="Description" placeholder="请输入内容" class="layui-textarea"></textarea>
            </div>
        </div>
        <div class="layui-form-item" style="display: none">
            <div class="layui-input-block">
                <button id="btnSubmit" class="layui-btn" lay-submit lay-filter="add">提交</button>
            </div>
        </div>
    </form>
</div>
@section scripts {
    <script>
        var form = layui.form, layedit = layui.layedit;
        var layer = layui.layer; 
        var primaryKey = $.getQueryString("primaryKey");
        if (primaryKey) {
            $.ajax({
                url: "/Configure/Relations/GetForm",
                data: { primaryKey: primaryKey },
                type: "post",
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form").formSerialize(data);
                }
            });
        }

        form.render();

        form.on('submit(add)', function (data) {
            $.formSubmit({
                url: "/Configure/Relations/SaveForm",
                data: data.field
            });
            return false;
        });

    </script>
}
