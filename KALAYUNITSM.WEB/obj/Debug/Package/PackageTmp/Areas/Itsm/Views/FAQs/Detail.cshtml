@{
    Layout = "~/Views/Shared/_Form.cshtml";
}
@model KALAYUNITSM.ENTITY.Itsm_FAQs_Dto
<link rel="stylesheet" type="text/css" href="~/Scripts/select2/css/select2.css" media="all" />
<div class="content">
    <fieldset class="layui-elem-field layui-field-title site-title">
        <legend><a name="compatibility">@Model.Name</a></legend>
    </fieldset>
    <div class="faqcontent">
        分类： @Model.CategoryName
        <hr class="layui-bg-black">
        @Html.Raw(Model.Description)

    </div>
    <div class="faqauthor">
        <span class="font-small" style="margin-left:8px;">
            创建：@Model.Author&nbsp;
            @String.Format("{0:f}", Model.CreateTime)
        </span>
        <span class="font-small" style="margin-left:6px;">
            阅读(@Model.Hits)
        </span>
    </div>
</div>
@section scripts {
    <script type="text/javascript" src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script type="text/javascript" src="~/Scripts/ckeditor/config.js"></script>
    <script type="text/javascript" src="~/Scripts/select2/js/select2.min.js"></script>
}