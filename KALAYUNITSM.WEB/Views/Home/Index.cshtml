<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>服务台-赛尔IT运维服务平台</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta http-equiv="Access-Control-Allow-Origin" content="*">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <link rel="icon" href="favicon.ico">
    <link rel="stylesheet" type="text/css" href="~/plugins/layui/css/layui.css" media="all" />
    <link rel="stylesheet" type="text/css" href="~/plugins/font-awesome/css/font-awesome.min.css" media="all" />
    <link rel="stylesheet" type="text/css" href="~/Scripts/pace/dataurl.css" media="all" />
    <link rel="stylesheet" type="text/css" href="~/css/main.css" media="all" />
</head>
<body class="main_body">
    <div class="layui-layout layui-layout-admin showMenu">
        <!-- 顶部 -->
        <div class="layui-header header">
            <div class="layui-main">
                <a href="#" class="logo">@KALAYUNITSM.COMMON.Configs.GetValue("SystemName")</a>
                <!-- 显示/隐藏菜单 -->
                <div class="hideMenu">
                    <i class="fa fa-bars" aria-hidden="true"></i>
                </div>
                <!-- 搜索 -->
                <div class="layui-form component">
                    <select name="modules" lay-verify="required" lay-search="">
                        <option value="">直接选择或搜索选择</option>
                        <option value="1">工单</option>
                        <option value="2">服务请求</option>
                        <option value="20">知识库</option>
                    </select>
                    <i class="layui-icon">&#xe615;</i>
                </div>
                <!-- 天气信息 -->
                <div class="weather" pc>
                    <div id="tp-weather-widget"></div>
                </div>
                <!-- 顶部右侧菜单 -->
                <ul class="layui-nav top_menu">
                    <li class="layui-nav-item showNotice" id="showNotice" pc="">
                        <a href="javascript:;"><i class="fa fa-comment"></i><cite>信息中心</cite><span class="layui-badge-dot"></span></a>
                    </li>
                    <li class="layui-nav-item">
                        <a href="javascript:;" id="clearCached">
                            <i class="fa fa-trash-o fa-fw" aria-hidden="true" style="padding-right: 3px;padding-left: 1px;"></i><cite>清除缓存</cite>
                        </a>
                    </li>
                    <li class="layui-nav-item" id="config">
                        <a href=" javascript:;" data-url="~/System/Setting">
                            <i class="fa fa-gear" data-icon="fa fa-gear" aria-hidden="true" style="padding-right: 3px;padding-left: 1px;"></i><cite>设置</cite>
                        </a>
                    </li>
                    <li class="layui-nav-item">
                        <a href="javascript:;" id="full">
                            <i class="fa fa-arrows-alt" aria-hidden="true" style="padding-right: 3px;padding-left: 1px;"></i><cite>全屏</cite>
                        </a>
                    </li>
                    <li class="layui-nav-item" pc>
                        <a href="javascript:;">
                            <img src="@KALAYUNITSM.COMMON.OperatorProvider.Instance.Current.Avatar" class="layui-circle" width="35" height="35">
                            <cite>@KALAYUNITSM.COMMON.OperatorProvider.Instance.Current.Account</cite>
                        </a>
                        <dl class="layui-nav-child">
                            <dd><a href="javascript:;" data-url="~/page/user/userInfo.html"><i class="fa fa-user-circle"></i><cite>个人资料</cite></a></dd>
                            <dd><a href="javascript:;" data-url="page/user/changePwd.html"><i class="fa fa-key"></i><cite>修改密码</cite></a></dd>
                            <dd><a href="javascript:;" id="lock"><i class="fa fa-user-circle"></i><cite>锁屏 (Alt+L)</cite></a></dd>
                            <dd><a href="javascript:;" class="changeSkin"><i class="fa fa-exchange"></i><cite>更换皮肤</cite></a></dd>
                            <dd><a href="/Home/Exit" class="signOut"><i class="fa fa-sign-out"></i><cite>退出</cite></a></dd>
                        </dl>
                    </li>
                </ul>
            </div>
        </div>
        <!-- 左侧导航 -->
        <div class="layui-side layui-bg-cyan">
            <div class="user-photo">
                <a class="img" title="我的头像"><img src="@KALAYUNITSM.COMMON.OperatorProvider.Instance.Current.Avatar"></a>
                <p>欢迎你：<span class="userName">@KALAYUNITSM.COMMON.OperatorProvider.Instance.Current.RealName</span></p><p>[运维业务部]</p>
                <input type="hidden" id="lockPwd" value="@ViewBag.md5pwd" />
            </div>
            <div id="navBar" class="layui-side-scroll"></div>
        </div>
        <!-- 右侧内容 -->
        <div class="layui-body layui-form">
            <div class="layui-tab marg0" lay-filter="bodyTab" id="top_tabs_box">
                <ul class="layui-tab-title top_tab" id="top_tabs">
                    <li class="layui-this" lay-id=""><i class="fa fa-desktop"></i> <cite>服务台</cite><span class="layui-badge">9+</span></li>
                </ul>
                <ul class="layui-nav closeBox">
                    <li class="layui-nav-item">
                        <a href="javascript:;"><i class="fa fa-check-square"></i> 页面操作</a>
                        <dl class="layui-nav-child">
                            <dd><a href="javascript:;" class="refreshall refreshThis"><i class="fa fa-refresh"></i> 刷新全部</a></dd>
                            <dd><a href="javascript:;" class="refresh refreshThis"><i class="fa fa-refresh"></i> 刷新当前</a></dd>
                            <dd><a href="javascript:;" class="closePageOther"><i class="fa fa-minus-square-o"></i> 关闭其他</a></dd>
                            <dd><a href="javascript:;" class="closePageAll"><i class="fa fa-close"></i> 关闭全部</a></dd>
                        </dl>
                    </li>
                </ul>
                <div class="layui-tab-content clildFrame">
                    <div class="layui-tab-item layui-show">
                        <iframe src="~/Home/Main"></iframe>
                    </div>
                </div>
            </div>
        </div>
        <!-- 底部 -->
        <div class="layui-footer footer">
            <div class="layui-main">
                <p>
                    @KALAYUNITSM.COMMON.Configs.GetValue("CopyRight")
                </p>
            </div>
        </div>
    </div>

    <!--锁屏模板 start-->
    <script type="text/template" id="lock-temp">
        <div class="admin-header-lock" id="lock-box">
            <div class="admin-header-lock-img">
                <img src="@KALAYUNITSM.COMMON.OperatorProvider.Instance.Current.Avatar" />
            </div>
            <div class="admin-header-lock-name" id="lockUserName">@KALAYUNITSM.COMMON.OperatorProvider.Instance.Current.Account</div>
            <input type="password" class="admin-header-lock-input layui-input" autocomplete="off" name="lockPwd" id="lockPwd" /><button class="layui-btn" id="unlock">解锁</button>
            <div style="float:left; width:280px;margin-top:10px;font-size:13px;">
                <p>输入您的登录密码可以解锁屏幕！</p>
            </div>
        </div>
    </script>
    <!--锁屏模板 end -->
    <script type="text/javascript" src="~/Scripts/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="~/Scripts/pace/pace.min.js"></script>
    <script type="text/javascript" src="~/Scripts/md5/jquery.md5.js"></script>
    <script type="text/javascript" src="~/plugins/layui/layui.js"></script>
    <script type="text/javascript" src="~/js/leftNav.js"></script>
    <script type="text/javascript" src="~/js/weather.js"></script>
    <script type="text/javascript" src="~/js/index.js"></script>

    <script type="text/javascript">
        var client = { permission: [] };

        //加载用户权限。
        $.ajax({
            url: "/Manage/User/GetPermission",
            type: "post",
            dataType: "json",
            async: false,
            success: function (data) {
                if (data && data.length > 0) {
                    client.permission = data;
                }
            }
        });
    </script>
</body>
</html>