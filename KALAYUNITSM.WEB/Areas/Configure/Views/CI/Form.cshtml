@{
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="content">
    <form id="form" class="layui-form">
        @Html.AntiForgeryToken()
        <div class="layui-tab">
            <ul class="layui-tab-title">
                <li class="layui-this">基本属性</li>
                <li>扩展属性</li>
                <li id="kz">相关配置</li>
            </ul>
            <div class="layui-tab-content" id="formtab">
                <div class="layui-tab-item layui-show">

                    <div class="layui-form-item">
                        <div class="layui-inline">
                            <label class="layui-form-label">名称</label>
                            <div class="layui-input-inline">
                                <input type="hidden" name="Id" id="Id" />
                                <input type="hidden" name="CIGroupId" id="CIGroupId" />
                                <input type="text" name="Name" lay-verify="required" placeholder="请输入名称" autocomplete="off" class="layui-input width500">
                            </div>
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <div class="layui-inline">
                            <label class="layui-form-label">标签</label>
                            <div class="layui-input-inline">
                                <input type="text" name="Label" lay-verify="required" placeholder="请输入标签" autocomplete="off" class="layui-input">
                            </div>
                        </div>
                        <div class="layui-inline">
                            <label class="layui-form-label">状态</label>
                            <div class="layui-input-inline">
                                <select name="Status" id="Status" lay-verify="required" class="width200"></select>
                            </div>
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <div class="layui-inline">
                            <label class="layui-form-label">位置</label>
                            <div class="layui-input-inline">
                                <select name="LocaltionId" id="LocaltionId" lay-verify="required" class="width200"></select>
                            </div>
                        </div>
                        <div class="layui-inline">
                            <label class="layui-form-label">所属</label>
                            <div class="layui-input-inline">
                                <select name="CustomerId" id="CustomerId" lay-verify="required" class="width200"></select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="layui-tab-item">
                    @Html.Partial("~/Views/Shared/CI/" + ViewData["page"] + ".cshtml");
                </div>
                <div class="layui-tab-item">
                    <blockquote class="layui-elem-quote">
                        <ul id="relation"></ul>
                    </blockquote>
                    <button id="btnRelation" class="layui-btn"><i class="fa fa-plus"></i> 新增</button>
                </div>
            </div>
        </div>

        <div class="layui-form-item" style="display: none">
            <div class="layui-input-block">
                <button id="btnSubmit" class="layui-btn" lay-submit lay-filter="add">提交</button>
            </div>
        </div>
    </form>
</div>
@section scripts {
    <script>
        var form = layui.form, layedit = layui.layedit, layer = layui.layer;

        var primaryKey = $.getQueryString("primaryKey");
        if (primaryKey == null) {
            $("#kz").hide();
        }
        var CIGroupId = $.getQueryString("ciGroupId");
        $("#LocaltionId").bindSelect({
            url: "/Configure/Localtion/GetListTreeSelect"
        });

        $("#CIGroupId").val(CIGroupId);

        $("#CustomerId").bindSelect({
            url: "/Business/Customer/GetListTreeSelect"
        });

        $("#Status").bindSelect({
            url: "/Manage/ItemsDetail/GetItemByCode?itemCode=cistatus"
        });

        $.ajax({
            url: "/Configure/Relations/GetJsonDataForCI?id=" + primaryKey,
            type: 'GET',
            dataType: 'json',
            timeout: 1000,
            cache: false,
            success: function (data) {
                $("#relation").html("");
                var json = eval(data);
                if (json.length < 1) {
                    $("#relation").html("");
                } else {
                    $.each(json, function (index, item) {
                        //var name = json[index].Name;
                        $("#relation").append("<li type='Circle'><a href='#' onclick='OrderTemplete(\"" + item.Id + "\")'>" + item.CINName + "</a>： " + item.CIPName + "  " + item.Description + " <button class='layui-btn layui-btn-success' onclick=''><i class='fa fa-cut'></i> 删除</button></li>");
                    });
                }
            }
        });

        $("#btnRelation").click(function () {
            $.layerOpen({
                id: "relation",
                title: "相关配置",
                width: "800px",
                content: "/Configure/Relations/Distribution?primaryKey=" + $("#Id").val(),
                yes: function (layero, index) {
                    layero.find('#btnSubmit').click();
                }
            });
            return false;
        });

        if (primaryKey) {
            $.ajax({
                url: "/Configure/CI/GetForm",
                data: { primaryKey: primaryKey },
                type: "post",
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form").formSerialize(data);
                }
            });
        }

        form.render();

        form.on('submit(add)', function (data) {
            $.formSubmit({
                url: "/Configure/CI/SaveForm",
                data: data.field
            });
            return false;
        });

    </script>
}
