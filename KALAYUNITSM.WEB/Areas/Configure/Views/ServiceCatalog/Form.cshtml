@{
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="content">
    <form id="form" class="layui-form">
        @Html.AntiForgeryToken()
        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">编码</label>
                <div class="layui-input-inline">
                    <input type="hidden" name="Id" />
                    <input type="text" name="EnCode" lay-verify="required" placeholder="请输入编码（COM-XXXX）" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-inline">
                <label class="layui-form-label">服务目录</label>
                <div class="layui-input-inline">
                    <input type="text" name="Name" lay-verify="required" placeholder="请输入服务目录" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-inline">
                <label class="layui-form-label">服务形式</label>
                <div class="layui-input-inline">
                    <select name="Type" id="Type" lay-verify="required"></select>
                </div>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">父级</label>
                <div class="layui-input-inline">
                    <select name="ParentId" id="ParentId" lay-verify="required" style="width: 190px"></select>
                </div>
            </div>
            <div class="layui-inline">
                <label class="layui-form-label">排序码</label>
                <div class="layui-input-inline">
                    <input type="number" name="SortCode" lay-verify="number" placeholder="请输入排序" autocomplete="off" class="layui-input">
                </div>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">服务时间</label>
                <div class="layui-input-inline">
                    <input type="text" name="Time" lay-verify="required" placeholder="请输入服务时间" autocomplete="off" class="layui-input width500">
                </div>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">服务频率</label>
                <div class="layui-input-inline">
                    <input type="text" name="Frequency" lay-verify="required" placeholder="请输入服务频率" autocomplete="off" class="layui-input width500">
                </div>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">服务指标</label>
                <div class="layui-input-inline">
                    <input type="text" name="Level" lay-verify="required" placeholder="请输入服务指标" autocomplete="off" class="layui-input width500">
                </div>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-inline">
                <label class="layui-form-label">交付成果</label>
                <div class="layui-input-inline">
                    <input type="text" name="Delivery" lay-verify="required" placeholder="请输入交付成果" autocomplete="off" class="layui-input width500">
                </div>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">服务描述</label>
            <div class="layui-input-block" style="width: 800px;">
                <textarea name="Description" placeholder="请输入内容" class="layui-textarea"></textarea>
            </div>
        </div>
        <div class="layui-form-item" style="display: none">
            <div class="layui-input-block">
                <button id="btnSubmit" class="layui-btn" lay-submit lay-filter="add">提交</button>
            </div>
        </div>
    </form>
</div>
@section scripts {
    <script>
        var form = layui.form, layedit = layui.layedit;
        var layer = layui.layer;

        $("#Type").bindSelect({
            url: "/Manage/ItemsDetail/GetItemByCode?itemCode=servicecatalogtype"
        });

        $("#ParentId").bindSelect({
            url: "/Configure/ServiceCatalog/GetParent"
        });
        var primaryKey = $.getQueryString("primaryKey");
        if (primaryKey) {
            $.ajax({
                url: "/Configure/ServiceCatalog/GetForm",
                data: { primaryKey: primaryKey },
                type: "post",
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form").formSerialize(data);
                }
            });
        }

        form.render();

        form.on('submit(add)', function (data) {
            $.formSubmit({
                url: "/Configure/ServiceCatalog/SaveForm",
                data: data.field
            });
            return false;
        });

    </script>
}
